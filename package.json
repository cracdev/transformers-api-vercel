{
  "name": "transformers-api-vercel",
  "version": "1.0.0",
  "description": "Vercel-compatible TypeScript API for Transformers character names",
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "vercel dev",
    "type-check": "tsc --noEmit",
    "lint": "eslint api lib --ext .ts",
    "lint:fix": "eslint api lib --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "clean": "rimraf .vercel"
  },
  "keywords": [
    "transformers",
    "api",
    "vercel",
    "serverless",
    "typescript"
  ],
  "author": "Andres Castro <andres.ca@gmail.com> (http://crac.dev)",
  "license": "MIT",
  "dependencies": {
    "@cracdev/transformers-names": "^2.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vercel/node": "^3.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vercel": "^37.0.0"
  }
}
